[alias]
    history = log --pretty=format:'%Cred(%h) %Creset%s %Cgreen(%ar) %Cblue<%an>'

    unstage = reset HEAD
    uncommit = reset --soft HEAD^

    standup = history --since yesterday
    today = history --since midnight

    exec = "!exec "
    trust = "!mkdir --parents .git/safe"

[diff]
    algorithm = histogram

[pull]
    rebase = true

[fetch]
    prune = true

[rebase]
    autostash = true
    autosquash = true

[commit]
    verbose = true
