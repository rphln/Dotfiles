[alias]
    history = log --pretty=format:'%Cred(%h) %Creset%s %Cgreen(%ar) %Cblue<%an>'

    standup = history --since yesterday
    today = history --since midnight

    exec = "!exec "

    # See <https://twitter.com/tpope/status/165631968996900865>.
    trust = !mkdir -p .git/safe

[diff]
    algorithm = histogram
