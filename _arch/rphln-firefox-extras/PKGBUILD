pkgname=rphln-firefox-extras
pkgver=1.0.1
pkgrel=1
arch=(any)
depends=(firefox)
source=('google.xml' 'policies.json')
md5sums=('a9bad05d6d67a1301149845457018186'
	'1cf8ed828fb6d8b6c60c100fd52bd8df')

package() {
	install -D --mode 0644 "${srcdir}/policies.json" -t "${pkgdir}/usr/lib/firefox/distribution/"
	install -D --mode 0644 "${srcdir}/google.xml" -t "${pkgdir}/usr/lib/firefox/distribution/searchplugins/common/"
}
