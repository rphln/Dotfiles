pkgname=rphln-plasma-panel
pkgver=1.0.4
pkgrel=1
arch=(any)
depends=(plasma-desktop)
source=('layout.js' 'metadata.desktop')
md5sums=('7058f567466e5ce28cfc84dd5c53a666'
	'f23641759290197d6fec6d579321632b')

package() {
	install -D --mode 0644 "${srcdir}/layout.js" -t "${pkgdir}/usr/share/plasma/layout-templates/io.github.rphln.plasma-panel/contents/"
	install -D --mode 0644 "${srcdir}/metadata.desktop" -t "${pkgdir}/usr/share/plasma/layout-templates/io.github.rphln.plasma-panel/"
}
